@model IEnumerable<COMP2084GetMeAGame.Models.Product>

    <h1>Check out our great products!</h1>

    <section class="row card-group">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-lg-4 mb-3">
                <div class="card mb-4 text-center h-100">
                    <div class="card-body">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
                        <h6>@String.Format("{0:c}", item.Price)</h6>
                        @if (item.Photo != null)
                        {
                            <img src="~/images/product-uploads/@item.Photo" alt="Product Image" class="img-thumbnail" />
                        }
                        <form method="post" action="/Shop/AddToCart">
                            <fieldset class="form-group mt-3">
                                <label class="control-label" for="Quantity">Quantiy:</label>
                                <input name="Quantity" id="Quantity" required min="1" max="99999" type="number" />
                            </fieldset>
                            <button class="btn btn-primary">Add to Cart</button>
                            <input name="ProductId" id="ProductId" type="hidden" value="@item.Id" />
                        </form>
                    </div>
                </div>
            </div>
        }
    </section>
